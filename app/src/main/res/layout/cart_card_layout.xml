<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/nftImageView"
            android:layout_width="119dp"
            android:layout_height="115dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/cute_cat" />

        <TextView
            android:id="@+id/nftTitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:soundEffectsEnabled="false"
            android:text="Nft title"
            android:textColor="#000000"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="@+id/nftImageView"
            app:layout_constraintStart_toEndOf="@+id/nftImageView"
            app:layout_constraintTop_toTopOf="@+id/nftImageView"
            app:layout_constraintVertical_bias="0.506" />

        <TextView
            android:id="@+id/nftPriceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="0.5"
            android:textColor="#0B0B0B"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="@+id/nftTitleText"
            app:layout_constraintEnd_toStartOf="@+id/cartNftLogo"
            app:layout_constraintTop_toTopOf="@+id/nftTitleText"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/cartNftLogo"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            app:layout_constraintBottom_toBottomOf="@+id/nftPriceText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/nftPriceText"
            app:layout_constraintVertical_bias="0.666"
            app:srcCompat="@drawable/ether" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>